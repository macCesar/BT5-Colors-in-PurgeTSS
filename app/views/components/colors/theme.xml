<Alloy>
  <View class="vertical mt-4">
    <View class="vertical mx-4">
      <Label id="bootstrap" class="w-screen text-3xl font-bold" text="L('color')" />
      <Label class="h-auto w-full bg-transparent text-xl" text="L('color_description')" />
    </View>

    <View class="vertical mx-4 mt-6">
      <Label id="colors" class="w-screen text-xl font-bold" text="L('theme_colors')" />
      <Label class="h-auto w-full bg-transparent text-base" text="L('theme_colors_description')" />
    </View>

    <View class="mx-2 mt-1 grid w-auto">
      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-primary h-12 w-screen gap-2 rounded-lg text-center text-white" text="Primary" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-secondary h-12 w-screen gap-2 rounded-lg text-center text-white" text="Secondary" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-success h-12 w-screen gap-2 rounded-lg text-center text-white" text="Success" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-danger h-12 w-screen gap-2 rounded-lg text-center text-white" text="Danger" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-warning h-12 w-screen gap-2 rounded-lg text-center" text="Warning" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-info h-12 w-screen gap-2 rounded-lg text-center" text="Info" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-light h-12 w-screen gap-2 rounded-lg text-center" text="Light" />
      </View>

      <View class="handheld:grid-cols-2 tablet:grid-cols-4">
        <Label class="bg-dark h-12 w-screen gap-2 rounded-lg text-center text-white" text="Dark" />
      </View>
    </View>
  </View>
</Alloy>
