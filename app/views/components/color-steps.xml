<Alloy>
  <View class="mb-2 vertical">
    <View id="solid">
      <View class="w-3/5 ml-0 vertical">
        <Label id="solid_lbl" class="mx-2 font-bold text-white" text="{color}"/>
        <Label id="solid_hex_lbl" class="mx-2 text-white" text="{hex}"/>
      </View>

      <View class="w-2/5 mr-0 vertical">
        <View class="mr-0 horizontal">
          <Label class="mr-1 text-right text-white text-xxs fas fa-square" />
          <Label id="ratio_1" class="mr-2 font-mono text-xs text-right text-white" text="{ratio_1}"/>
        </View>

        <View class="mr-0 horizontal">
          <Label class="mr-1 text-right text-white text-xxs fas fa-square" />
          <Label id="ratio_2" class="mr-2 font-mono text-xs text-right text-white" text="{ratio_2}"/>
        </View>

        <View class="mr-0 horizontal">
          <Label class="mr-1 text-right text-black text-xxs fas fa-square" />
          <Label id="ratio_3" class="mr-2 font-mono text-xs text-right text-black" text="{ratio_3}"/>
        </View>
      </View>
    </View>

    <View id="step_100">
      <Label id="step_100_lbl" class="mx-2 text-black"/>
    </View>

    <View id="step_200">
      <Label id="step_200_lbl" class="mx-2 text-black"/>
    </View>

    <View id="step_300">
      <Label id="step_300_lbl" class="mx-2 text-black"/>
    </View>

    <View id="step_400">
      <Label id="step_400_lbl" class="mx-2 text-black"/>
    </View>

    <View id="step_500">
      <Label id="step_500_lbl" class="mx-2 text-white"/>
    </View>

    <View id="step_600">
      <Label id="step_600_lbl" class="mx-2 text-white"/>
    </View>

    <View id="step_700">
      <Label id="step_700_lbl" class="mx-2 text-white"/>
    </View>

    <View id="step_800">
      <Label id="step_800_lbl" class="mx-2 text-white"/>
    </View>

    <View id="step_900">
      <Label id="step_900_lbl" class="mx-2 text-white"/>
    </View>
  </View>
</Alloy>
